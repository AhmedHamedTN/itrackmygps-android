<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <fragment
            android:id="@+id/mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            class="com.google.android.gms.maps.MapFragment" />

    <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_header_status" >

        <ToggleButton
                android:id="@+id/toggleBtnService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="ON"
                android:textOff="OFF"
                android:onClick="onToggleClicked"/>

        <ImageView
                android:id="@+id/iv_gps_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TableLayout
            android:id="@+id/table_layout"
            android:layout_below="@id/header_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gps_status" >

        <TableRow>
            <TextView
                    android:text="Ctr:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSCounter"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Time:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSTimestamp"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Lat:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSLatitude"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Lon:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSLongitude"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Speed (mps):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSSpeed"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Heading (ยบ):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSBearing"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Altitude (m):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSAltitude"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Err (m):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSAccuracy"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Type:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSProvider"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Sat(F/T):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tvGPSFixTotalSatellites"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

    </TableLayout>

</RelativeLayout>


