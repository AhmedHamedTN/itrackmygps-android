<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <fragment
            android:id="@+id/mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            class="com.google.android.gms.maps.MapFragment" />

    <LinearLayout
            android:id="@+id/layout_user_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_user_status"
            android:padding="5dp">

        <TextView
                android:text="Tracker Status"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:maxLines="2"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginTop="-10dp"/>

        <ToggleButton
                android:id="@+id/btn_toggle_tracker_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="ON"
                android:textOff="OFF"
                android:textSize="26dp"
                android:textStyle="bold"
                android:onClick="onToggleClicked" />
        
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="rndguzmanjr"
                android:maxLines="1"
                android:padding="5dp"
                android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_tracker_status"
            android:layout_below="@id/layout_user_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_tracker_status"
            android:padding="5dp">

        <LinearLayout
                android:id="@+id/layout_status_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                <TextView
                        android:id="@+id/tv_fix"
                        android:text="Fix"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center" />

                <ImageView
                        android:id="@+id/iv_gps_status"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_below="@id/tv_fix"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"/>

                <TextView
                        android:id="@+id/tv_gps_fix_status"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/tv_fix"
                        android:layout_toRightOf="@id/iv_gps_status"
                        android:textSize="8dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#ffffff" />

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                <TextView
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="Type"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#ffffff" />

                <TextView
                        android:id="@+id/tv_gps_provider"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                <TextView
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="SAT"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#ffffff" />

                <TextView
                        android:id="@+id/tv_gps_fix_total_satellites"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TableLayout
            android:id="@+id/layout_gps_details"
            android:layout_below="@id/layout_tracker_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gps_status" >

        <TableRow>
            <TextView
                    android:text="Ctr:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_counter"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Time:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_timestamp"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Lat:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_latitude"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Lon:"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_longitude"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Speed (mps):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_speed"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Heading (ยบ):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_bearing"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

        <TableRow>
            <TextView
                    android:text="Altitude (m):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_altitude"
                    style="@style/GPSDetailsTableData" />
            <TextView
                    android:text="Err (m):"
                    style="@style/GPSDetailsTableColumn" />
            <TextView
                    android:id="@+id/tv_gps_accuracy"
                    style="@style/GPSDetailsTableData" />
        </TableRow>

    </TableLayout>

</RelativeLayout>


